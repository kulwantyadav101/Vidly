@model Vidly.Models.Movie
    @using System.Globalization

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    <h2>@Model.Name</h2>
    <ul>
        <li>Genre: @Model.Genre.Name</li>
        <li>Release Date: @Model.ReleaseDate.ToString("D", new CultureInfo("en-US"))</li>
        <li>Date Added: @Model.DateAdded.ToString("D", new CultureInfo("en-US"))</li>
        <li>Number In Stock: @Model.NumberInStock</li>
    </ul>
}
